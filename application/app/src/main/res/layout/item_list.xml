<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="foodVO"
            type="com.example.application.model.FoodVO" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@{foodVO.bakeryVO.storeName}"
            tools:text="가게 이름" />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="4dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@{foodVO.foodName}"
            tools:text="빵 이름" />

        <TextView
            android:id="@+id/sale_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="4dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="@{foodVO.saleTime}"
            tools:text="10:00"/>

        <TextView
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="삭제"
            app:layout_constraintBottom_toBottomOf="@id/sale_time" />
    </LinearLayout>
</layout>